<%= render 'books/bubun', user: @bubun_user %>

  <div class="col-md-8 offset-md-1">
    <h2>Users</h2>
    <table class="table">
      <thead>
        <tr>
          <th>image</th>
          <th>name</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <% @user.each do |u| %>
      <tbody>
        <tr>
          <td><%= attachment_image_tag u, :profile_image, :fill, 40, 40, format:'jpeg', fallback:"no_image.jpg" %></td>
          <td><%= u.name %></td>
          <td><%= link_to "show", user_path(u.id) %></td>
        </tr>
      </tbody>
      <% end %>
    </table>
  </div>