      <div class="col-md-3">
        <h2>User info</h2>
        <%= attachment_image_tag user, :profile_image, :fill, 100, 100, format:'jpeg', fallback:"no_image.jpg" %>
        <table class="table">
          <tbody>
            <tr>
	            <th>name</th>
	            <th><%= user.name %></th>
            </tr>
            <tr>
	            <th>introduction</th>
	            <th><%= user.introduction %></th>
            </tr>
          </tbody>
        </table>

        <div class="row">
          <%= link_to "暫定", "/users/37158/edit", class: "btn btn-outline-secondary btn-block fas fa-user-cog edit_user_37158" %>
        </div>


        <h2 class="mt-3">New book</h2>
        <%= form_with model:@book, url: books_path, local:true do |f| %>
          <h4>Title</h4>
          <%= f.text_field :title %>
          <h4>Opinion</h4>
          <%= f.text_area :body %>
          <%= f.submit 'Create book' %>
        <% end %>
      </div>