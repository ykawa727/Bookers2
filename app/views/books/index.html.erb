<%= render 'books/bubun', user: @user%>

      <div class="col-md-8 offset-md-1">
        <h2>Books</h2>
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @books.each do |b| %>
            <tr>
              <td><%= b.bookpost_id %></td>
              <td><%= b.title %></td>
              <td><%= b.body %></td>
            </tr>
            <% end %>

          </tbody>
        </table>
      </div>