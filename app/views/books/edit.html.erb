<div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
  <h1>Editing Book</h1>
    <%= form_with model:@book, local:true do |f| %>

      <div class="form-group">
        <!--<label for="book_title">Title</label>-->
        <%= f.label :title %>
        <%= f.text_field :title, autofocus: true, id:"book_title", placeholder:"タイトル", class: "form-control book_title"%>
      </div>

      <div class="form-group">
        <!--<label for="book_opinion">Opinion</label>-->
        <%= f.label :opinion %>
        <%= f.text_area :body, autofocus: true, id:"book_opinion", placeholder:"オピニオン", class: "form-control book_opinion" %>
      </div>

      <div class="form-group">
        <%= f.submit 'Update Book', class: "btn btn-success" %>
      </div>
    <% end %>

    <%= link_to 'Show', book_path(params[:id]) %>
    <%= "|" %>
    <%= link_to 'Back', books_path %>
</div>