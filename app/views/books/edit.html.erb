<div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
  <h1>Editing Book</h1>
    <%= form_with model:@book, local:true do |f| %>

      <label for="book_title">Title</label>
      <%= f.text_field :title, autofocus: true, id:"book_title", placeholder:"タイトル"%>

      <label for="book_opinion">Opinion</label>
      <%= f.text_area :body, autofocus: true, id:"book_opinion", placeholder:"オピニオン"%>

      <%= link_to 'Update Book', book_path(params[:id]), class: "btn btn-success" %>
    <% end %>

    <%= link_to 'Show', book_path(params[:id]) %>
    <%= link_to 'Back', books_path %>
</div>